---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Calculator from '../components/Calculator.astro';
import Sidebar from '../components/Sidebar.astro';
import Chart from '../components/Chart.astro';
import Footer from '../components/Footer.astro';
import Tips from '../components/Tips.astro';
import Navbar from '../components/Navbar.astro';
---

<Layout  
  title="Calculadora de Ganado en Pie - Valor Comercial MXN" 
  description="Calcula el valor comercial de tu ganado en pie de forma rápida y precisa. Ingresa el peso en kilos y obtén el resultado en pesos mexicanos (MXN)." 
>
  <Navbar />
  <div class="min-h-screen bg-gradient-to-br from-gray-50 to-slate-100">
    <div class="container mx-auto px-4 py-8">
      <!-- Hero Section -->
      <Hero />

      <!-- Main Content Grid -->
      <div class="max-w-7xl mx-auto">
        <!-- Top Section: Calculator + Sidebar (Optimized Layout) -->
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-6 lg:gap-8 mb-8">
          <!-- Main Calculator (Expanded - más ancha) -->
          <div class="lg:col-span-8 xl:col-span-9 order-2 lg:order-1">
            <Calculator />
          </div>

          <!-- Sidebar (Compressed - más estrecha) -->
          <div class="lg:col-span-4 xl:col-span-3 order-1 lg:order-2">
            <div class="space-y-6">
              <Sidebar />
            </div>
          </div>
        </div>

        <!-- Bottom Section: Chart -->
        <div class="mb-8">
          <Chart />
        </div>

        <!-- Tips Section -->
        <div class="mb-8">
          <Tips />
        </div>
      </div>

      <!-- Footer -->
      <Footer />
    </div>
  </div>
</Layout>