---

<div class="bg-white/90 backdrop-blur-sm rounded-2xl shadow-lg p-6 md:p-8 border border-white/30">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center space-x-3 mb-4">
      <div class="w-12 h-12 bg-gradient-to-br from-emerald-500 to-green-600 rounded-xl flex items-center justify-center shadow-lg">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
        </svg>
      </div>
      <div>
        <h2 class="text-2xl md:text-3xl font-bold bg-gradient-to-r from-gray-800 to-gray-600 bg-clip-text text-transparent">
          Valor ganado en canal
        </h2>
        <p class="text-gray-600">Ingrese el peso del bovino üêÇ</p>
      </div>
    </div>
  </div>

  <!-- Calculator Form -->
  <form id="calculatorForm" class="space-y-6">
    <!-- Weight Input -->
    <div class="relative group">
      <label for="inputValue" class="block text-lg font-semibold text-gray-700 mb-3 group-hover:text-emerald-600 transition-colors">
        Peso del toro (kg)
      </label>
      <div class="relative">
        <input
          type="number"
          id="inputValue"
          name="inputValue"
          step="0.01"
          min="0"
          placeholder="Peso en pie"
          class="w-full px-6 py-4 pr-16 border-2 border-gray-300 rounded-xl text-xl font-semibold transition-all duration-300 bg-white hover:border-emerald-300 focus:ring-4 focus:ring-emerald-100 focus:border-emerald-500"
          required
        />
        <div class="absolute inset-y-0 right-0 flex items-center pr-6">
          <span class="text-emerald-500 font-semibold text-lg">Kg</span>
        </div>
        <div class="absolute inset-x-0 bottom-0 h-0.5 bg-gradient-to-r from-emerald-500 to-green-500 transform scale-x-0 group-focus-within:scale-x-100 transition-transform duration-300"></div>
      </div>
    </div>

    <!-- Calculate Button -->
    <button
      type="submit"
      class="w-full bg-gradient-to-r from-emerald-600 via-green-600 to-emerald-700 hover:from-emerald-700 hover:via-green-700 hover:to-emerald-800 text-white font-bold py-4 px-8 rounded-xl transition-all duration-300 transform hover:scale-105 hover:-translate-y-1 shadow-lg hover:shadow-2xl focus:outline-none focus:ring-4 focus:ring-emerald-200 active:scale-95 group"
    >
      <span class="flex items-center justify-center space-x-3">
        <svg class="w-6 h-6 group-hover:rotate-12 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
        </svg>
        <span class="text-lg">Calcular valor comercial</span>
      </span>
    </button>
  </form>

  <!-- Result Display -->
  <div id="result" class="mt-8 hidden">
    <div class="bg-gradient-to-br from-emerald-50 via-green-50 to-teal-50 rounded-2xl p-6 border-l-4 border-emerald-500 shadow-inner">
      <!-- Result Header -->
      <div class="flex items-center space-x-3 mb-6">
        <div class="w-8 h-8 bg-emerald-500 rounded-full flex items-center justify-center">
          <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
        </div>
        <h3 class="text-xl font-bold text-gray-800">Resultado de la evaluaci√≥n</h3>
      </div>

      <!-- Result Values Stack -->
      <div class="space-y-4 mb-6">
        <!-- Peso Evaluado -->
        <div class="flex items-center justify-between p-4 md:p-6 bg-white/60 rounded-xl hover:bg-white/80 transition-all duration-300 hover:scale-105">
          <div class="flex items-center space-x-4">
            <div class="w-12 h-12 bg-gray-100 rounded-full flex items-center justify-center">
              <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3"></path>
              </svg>
            </div>
            <div>
              <p class="text-sm md:text-base text-gray-600">Peso evaluado</p>
              <p class="text-xs text-gray-500">Animal en canal</p>
            </div>
          </div>
          <div class="text-right">
            <div class="overflow-hidden">
              <p class="text-2xl md:text-3xl font-bold text-gray-800">
                <span id="inputWeight" class="counter">0</span>
              </p>
            </div>
            <p class="text-sm text-gray-600">kg</p>
          </div>
        </div>

        <!-- Valor Comercial Total -->
        <div class="flex items-center justify-between p-4 md:p-6 bg-gradient-to-r from-emerald-50 to-green-50 rounded-xl hover:from-emerald-100 hover:to-green-100 transition-all duration-300 hover:scale-105 border border-emerald-200">
          <div class="flex items-center space-x-4">
            <div class="w-12 h-12 bg-emerald-100 rounded-full flex items-center justify-center">
              <svg class="w-6 h-6 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div>
              <p class="text-sm md:text-base font-semibold text-emerald-800">Valor comercial total</p>
              <p class="text-xs text-emerald-600">Precio estimado completo</p>
            </div>
          </div>
          <div class="text-right">
            <div class="overflow-hidden">
              <p class="text-2xl md:text-3xl xl:text-4xl font-bold text-emerald-700">
                $<span id="resultValue" class="counter">0.00</span>
              </p>
            </div>
            <p class="text-sm text-emerald-600">MXN</p>
          </div>
        </div>

        <!-- Precio por kg -->
        <div class="flex items-center justify-between p-4 md:p-6 bg-gradient-to-r from-blue-50 to-indigo-50 rounded-xl hover:from-blue-100 hover:to-indigo-100 transition-all duration-300 hover:scale-105 border border-blue-200">
          <div class="flex items-center space-x-4">
            <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
            </div>
            <div>
              <p class="text-sm md:text-base text-blue-800 font-semibold">Precio por kilogramo</p>
              <p class="text-xs text-blue-600">Valor unitario calculado</p>
            </div>
          </div>
          <div class="text-right">
            <div class="overflow-hidden">
              <p class="text-2xl md:text-3xl xl:text-4xl font-bold text-blue-700">
                $<span id="pricePerKg" class="counter">0.00</span>
              </p>
            </div>
            <p class="text-sm text-blue-600">MXN/kg</p>
          </div>
        </div>
      </div>

      <!-- Model Info -->
      <!-- <div class="flex flex-col sm:flex-row items-center justify-center space-y-2 sm:space-y-0 sm:space-x-2 pt-4 border-t border-emerald-200">
        <div class="w-2 h-2 bg-emerald-500 rounded-full animate-pulse flex-shrink-0"></div>
        <p class="text-xs sm:text-sm text-gray-700 text-center break-words">
          <span class="block sm:inline">Modelo: <span class="font-semibold text-emerald-700">y = 102.53x + 3774.92</span></span>
          <span class="text-xs text-gray-500 ml-0 sm:ml-2 block sm:inline">(R¬≤ = 0.939)</span>
        </p>
      </div> -->
    </div>

  </div>
</div>

<script>
  // Linear regression model parameters
  // y = mx + b where y = total price, x = weight in kg
  const REGRESSION_SLOPE = 102.53;  // m coefficient
  const REGRESSION_INTERCEPT = 3774.92;  // b coefficient

  // Calculate total price using linear regression
  function calculateTotalPrice(weight) {
    return (REGRESSION_SLOPE * weight) + REGRESSION_INTERCEPT;
  }

  // Calculate price per kg based on total price
  function calculatePricePerKg(totalPrice, weight) {
    return totalPrice / weight;
  }

  // Counter animation
  function animateCounter(element, start, end, duration) {
    let current = start;
    const increment = (end - start) / (duration / 16);

    function updateCounter() {
      current += increment;
      if ((increment > 0 && current >= end) || (increment < 0 && current <= end)) current = end;

      const opts = { minimumFractionDigits: 2, maximumFractionDigits: 2 };
      element.textContent = current.toLocaleString('es-MX', opts);

      if (current !== end) requestAnimationFrame(updateCounter);
    }

    updateCounter();
  }

  document.getElementById('calculatorForm').addEventListener('submit', function (e) {
    e.preventDefault();

    const inputEl = document.getElementById('inputValue');
    const inputValue = parseFloat(inputEl.value);

    // Validation
    if (isNaN(inputValue) || inputValue <= 0) {
      inputEl.classList.add('border-red-500', 'focus:border-red-500', 'focus:ring-red-100', 'bg-red-50');
      inputEl.style.animation = 'shake 0.5s ease-in-out';

      // Add error icon
      const errorIcon = document.createElement('div');
      errorIcon.className = 'absolute inset-y-0 right-16 flex items-center';
      errorIcon.innerHTML = '<svg class="w-5 h-5 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>';
      inputEl.parentElement.appendChild(errorIcon);

      setTimeout(() => {
        inputEl.classList.remove('border-red-500', 'focus:border-red-500', 'focus:ring-red-100', 'bg-red-50');
        inputEl.style.animation = '';
        errorIcon.remove();
      }, 3000);

      return;
    }

    // Calculate results using linear regression
    const totalPrice = calculateTotalPrice(inputValue);
    const pricePerKg = calculatePricePerKg(totalPrice, inputValue);

    // Show result panel
    const resultDiv = document.getElementById('result');
    resultDiv.classList.remove('hidden');

    // Entrance animation
    resultDiv.style.opacity = '0';
    resultDiv.style.transform = 'translateY(20px)';

    setTimeout(() => {
      resultDiv.style.transition = 'all 0.6s cubic-bezier(0.4, 0, 0.2, 1)';
      resultDiv.style.opacity = '1';
      resultDiv.style.transform = 'translateY(0)';

      // Animate counters
      setTimeout(() => {
        animateCounter(document.getElementById('inputWeight'), 0, inputValue, 800);
        animateCounter(document.getElementById('resultValue'), 0, totalPrice, 1000);
        animateCounter(document.getElementById('pricePerKg'), 0, pricePerKg, 1200);
      }, 300);
    }, 100);

    // Smooth scroll to result
    setTimeout(() => {
      resultDiv.scrollIntoView({ behavior: 'smooth', block: 'center' });
    }, 200);
  });

  // Add shake animation styles
  const style = document.createElement('style');
  style.textContent = `
    @keyframes shake {
      0%, 100% { transform: translateX(0); }
      10%, 30%, 50%, 70%, 90% { transform: translateX(-8px); }
      20%, 40%, 60%, 80% { transform: translateX(8px); }
    }
  `;
  document.head.appendChild(style);
</script>