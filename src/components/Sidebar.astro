---
// src/components/Sidebar.astro
---

<div class="bg-white/90 backdrop-blur-sm rounded-2xl shadow-lg border border-white/30 hover:bg-white/95 hover:shadow-xl transition-all duration-300 group">
  <!-- Header -->
  <div class="p-4 md:p-5 border-b border-gray-100">
    <h3 class="text-base md:text-lg font-bold text-gray-800 flex items-center group-hover:text-emerald-600 transition-colors">
      <div class="w-2 h-6 bg-gradient-to-b from-emerald-500 to-green-600 rounded-full mr-2 group-hover:scale-105 transition-transform duration-300"></div>
      <span class="text-sm md:text-base">Info del mercado</span>
    </h3>
  </div>

  <!-- Market Stats -->
  <div class="p-4 md:p-5 space-y-3">
    <!-- Current Price -->
    <div class="grid grid-cols-1 gap-3">
      <div class="text-center p-3 bg-gradient-to-br from-emerald-50 to-green-50 rounded-xl border border-emerald-100 hover:shadow-lg transition-all duration-300">
        <div class="text-xl md:text-2xl font-bold text-emerald-700 mb-1">$113.96</div>
        <div class="text-xs text-gray-600">MXN/kg promedio</div>
        <div class="flex items-center justify-center mt-2">
          <div class="w-2 h-2 bg-emerald-500 rounded-full animate-pulse mr-2"></div>
          <span class="text-xs font-medium text-emerald-600">Estable</span>
        </div>
      </div>

      <!-- Precision -->
      <div class="text-center p-3 bg-white/70 rounded-xl border border-gray-100 hover:border-emerald-200 hover:shadow-md transition-all duration-300">
        <div class="text-xl md:text-2xl font-bold text-gray-800">93.9%</div>
        <div class="text-xs text-gray-600">Precisión R²</div>
        <div class="flex items-center justify-center mt-2">
          <svg class="w-3 h-3 text-green-500 mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
          </svg>
          <span class="text-xs font-medium text-green-600">Alto</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Technical Considerations -->
  <div class="p-4 md:p-5 pt-0">
    <h4 class="font-semibold text-gray-800 mb-3 text-xs md:text-sm flex items-center">
      <svg class="w-4 h-4 mr-2 text-yellow-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.732 15.5c-.77.833.192 2.5 1.732 2.5z"></path>
      </svg>
      <span class="hidden md:inline">Consideraciones técnicas</span>
      <span class="md:hidden">Consideraciones</span>
    </h4>

    <div class="space-y-2 text-xs text-gray-700">
      <div class="flex items-start">
        <div class="w-1.5 h-1.5 bg-emerald-500 rounded-full mt-1.5 mr-2 flex-shrink-0"></div>
        <span class="leading-relaxed">Precio por kg varía según peso total</span>
      </div>
      <div class="flex items-start">
        <div class="w-1.5 h-1.5 bg-emerald-500 rounded-full mt-1.5 mr-2 flex-shrink-0"></div>
        <span class="leading-relaxed">Variabilidad por raza, edad y condición</span>
      </div>
      <div class="flex items-start">
        <div class="w-1.5 h-1.5 bg-emerald-500 rounded-full mt-1.5 mr-2 flex-shrink-0"></div>
        <span class="leading-relaxed">Sujeto a fluctuaciones regionales</span>
      </div>
    </div>
  </div>

  <!-- Model Info Compact -->
  <div class="p-4 md:p-5 pt-0 border-t border-gray-100/50">
    <div class="bg-blue-50/50 rounded-lg p-3">
      <div class="flex items-center justify-center mb-2">
        <div class="w-2 h-2 bg-blue-500 rounded-full animate-pulse mr-2"></div>
        <span class="text-xs font-semibold text-blue-700">Modelo Estadístico</span>
      </div>
      <div class="text-center">
        <p class="text-xs text-blue-600 font-mono">y = 102.53x + 3774.92</p>
        <p class="text-xs text-blue-500 mt-1">1,119 registros SNIIM</p>
      </div>
    </div>
  </div>
</div>