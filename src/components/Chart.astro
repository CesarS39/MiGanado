---
// src/components/Chart.astro
---

<div id="tendencias" class="bg-white/90 backdrop-blur-sm rounded-2xl shadow-lg border border-white/30 p-6 hover:bg-white/95 hover:shadow-xl transition-all duration-300">
  <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-6 space-y-4 md:space-y-0">
    <div class="flex items-center space-x-3">
      <div class="w-12 h-12 bg-gradient-to-br from-emerald-500 to-green-600 rounded-xl flex items-center justify-center shadow-lg hover:scale-105 transition-transform duration-300">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
        </svg>
      </div>
      <div>
        <h3 class="text-xl md:text-2xl font-bold bg-gradient-to-r from-gray-800 to-gray-600 bg-clip-text text-transparent">
          Precio total contra Peso en kg
        </h3>
        <p class="text-gray-600 text-sm md:text-base">Análisis de regresión para toros</p>
      </div>
    </div>

    <div class="hidden md:flex items-center space-x-4 text-sm">
      <div class="flex items-center space-x-2">
        <div class="w-3 h-3 bg-emerald-500 rounded-full shadow-sm"></div>
        <span class="text-gray-600">Peso_kg</span>
      </div>
      <div class="flex items-center space-x-2">
        <div class="w-3 h-1 bg-red-500 rounded-full shadow-sm"></div>
        <span class="text-gray-600">Línea de tendencia R² = 0.939</span>
      </div>
    </div>
  </div>

  <!-- Chart Container -->
  <div class="relative bg-gradient-to-br from-gray-50 to-white rounded-xl border border-gray-200 overflow-hidden">
    <img 
      src="MiGanado/images/regresion_toros.png" 
      alt="Gráfico de regresión - Precio vs Peso de Toros" 
      class="w-full h-auto object-contain min-h-[300px] md:min-h-[400px]"
      onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
    />
    
    <!-- Fallback if image doesn't load -->
    <div class="hidden items-center justify-center h-64 md:h-80 bg-gray-100 rounded-xl">
      <div class="text-center text-gray-500">
        <svg class="w-16 h-16 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
        </svg>
        <p className="text-sm">Gráfico de tendencia de precios</p>
        <p className="text-xs text-gray-400 mt-1">Imagen no disponible</p>
      </div>
    </div>
  </div>

  <!-- Mobile Legend -->
  <div class="flex justify-center mt-4 space-x-6 text-sm md:hidden">
    <div class="flex items-center space-x-2">
      <div class="w-3 h-3 bg-emerald-500 rounded-full shadow-sm"></div>
      <span class="text-gray-600">Peso_kg</span>
    </div>
    <div class="flex items-center space-x-2">
      <div class="w-3 h-1 bg-red-500 rounded-full shadow-sm"></div>
      <span class="text-gray-600">Tendencia R² = 0.939</span>
    </div>
  </div>

  <!-- Chart Info -->
  <div class="mt-4 p-4 bg-gradient-to-r from-blue-50 to-purple-50 rounded-xl border border-blue-100">
    <div class="flex items-center justify-center space-x-6 text-sm text-gray-700">
      <div class="text-center">
        <div class="font-semibold text-blue-600">R² = 0.939</div>
        <div class="text-xs text-gray-600">Precisión del modelo</div>
      </div>
      <div class="w-px h-8 bg-gray-300"></div>
      <div class="text-center">
        <div class="font-semibold text-purple-600">Toros</div>
        <div class="text-xs text-gray-600">Tipo de ganado</div>
      </div>
      <div class="w-px h-8 bg-gray-300"></div>
      <div class="text-center">
        <div class="font-semibold text-emerald-600">$113.96/kg</div>
        <div class="text-xs text-gray-600">Precio base</div>
      </div>
    </div>
  </div>
</div>