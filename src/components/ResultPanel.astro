---
// src/components/ResultPanel.astro
---

<div id="result" class="mt-6 hidden">
  <div class="bg-gradient-to-br from-emerald-50 to-green-50 rounded-2xl p-6 border border-emerald-200 shadow-inner">
    <!-- Result Header -->
    <div class="flex items-center space-x-3 mb-4">
      <div class="w-8 h-8 bg-emerald-500 rounded-full flex items-center justify-center">
        <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
        </svg>
      </div>
      <h3 class="text-xl font-bold text-gray-800">Resultado de la evaluación</h3>
    </div>

    <!-- Result Values -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
      <!-- Weight Display -->
      <div class="text-center p-4 bg-white/70 rounded-xl hover:bg-white/90 transition-all duration-300">
        <p class="text-sm text-gray-600 mb-2">Peso evaluado</p>
        <p class="text-2xl font-bold text-gray-800">
          <span id="inputWeight" class="counter">0</span> <span class="text-lg text-gray-600">kg</span>
        </p>
      </div>

      <!-- Value Display -->
      <div class="text-center p-4 bg-gradient-to-br from-emerald-100 to-green-100 rounded-xl hover:from-emerald-200 hover:to-green-200 transition-all duration-300">
        <p class="text-sm text-gray-600 mb-2">Valor comercial</p>
        <p class="text-2xl font-bold text-emerald-700">
          $<span id="resultValue" class="counter">0.00</span> <span class="text-lg">MXN</span>
        </p>
      </div>
    </div>

    <!-- Additional Info -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
      <!-- Cattle Type -->
      <div class="text-center p-3 bg-white/50 rounded-xl">
        <p class="text-xs text-gray-600 mb-1">Tipo de ganado</p>
        <p class="text-lg font-semibold text-gray-800" id="cattleTypeDisplay">Corral</p>
      </div>

      <!-- Base Price -->
      <div class="text-center p-3 bg-white/50 rounded-xl">
        <p class="text-xs text-gray-600 mb-1">Precio base</p>
        <p class="text-lg font-semibold text-emerald-700" id="basePrice">$80.75 MXN/kg</p>
      </div>
    </div>

    <!-- Status Indicator -->
    <div class="flex items-center justify-center space-x-2 pt-4 border-t border-emerald-200">
      <div class="w-2 h-2 bg-emerald-500 rounded-full animate-pulse"></div>
      <p class="text-sm text-gray-700">
        Cálculo actualizado según precios de mercado vigentes
      </p>
    </div>
  </div>

  <!-- Chart Section -->
  <div class="mt-6">
    <div class="bg-white/90 backdrop-blur-sm rounded-2xl shadow-lg border border-white/30 p-6">
      <h3 class="text-lg font-bold text-gray-800 mb-4 flex items-center">
        <svg class="w-5 h-5 mr-2 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
        </svg>
        Precio total contra Peso en kg
      </h3>
      
      <!-- Chart Image Placeholder -->
      <div class="relative bg-gradient-to-br from-gray-50 to-gray-100 rounded-xl p-8 border border-gray-200">
        <div class="text-center">
          <!-- This would be where your chart image goes -->
          <img 
            src="/chart-placeholder.png" 
            alt="Gráfico de Precio vs Peso" 
            class="w-full h-64 object-contain rounded-lg bg-white shadow-sm"
            onerror="this.style.display='none'; this.nextElementSibling.style.display='block';"
          />
          
          <!-- Fallback chart visualization -->
          <div class="hidden">
            <div class="flex items-end justify-center space-x-2 h-32">
              <div class="w-6 bg-emerald-400 h-16 rounded-t"></div>
              <div class="w-6 bg-emerald-500 h-20 rounded-t"></div>
              <div class="w-6 bg-emerald-600 h-24 rounded-t"></div>
              <div class="w-6 bg-green-500 h-28 rounded-t"></div>
              <div class="w-6 bg-green-600 h-32 rounded-t"></div>
            </div>
            <p class="text-sm text-gray-500 mt-4">Gráfico de tendencia de precios</p>
          </div>
        </div>
        
        <!-- Chart Legend -->
        <div class="mt-4 flex items-center justify-center space-x-6 text-sm">
          <div class="flex items-center space-x-2">
            <div class="w-3 h-3 bg-emerald-500 rounded-full"></div>
            <span class="text-gray-600">Peso_kg</span>
          </div>
          <div class="flex items-center space-x-2">
            <div class="w-3 h-1 bg-red-500"></div>
            <span class="text-gray-600">Línea de tendencia para Peso_kg R² = 0.978</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>